@{
    ViewData["Title"] = "AllMobiles";
}
@model IEnumerable<MobilesModels>
<div class="container">
    <h3 class="display-4">All Mobiles</h3>
    <div class="row">
        @foreach (var mobiles in Model)
        {
            <div class="col-md-4">
                <div class="card md-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>></svg>
                    <div class="card-body">
                        <h3 class="card-title">@mobiles.MobileName</h3>
                        <p class="card-text">@mobiles.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-route="mobileDetailsRoute" asp-route-id="@mobiles.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted">@mobiles.MobileVersion</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>