
@{
    ViewData["Title"] = "Add New Product";
}
@model MobilesModels

    <div class="container">
        <h3 class="display-4">Add New Product</h3>
        <hr />
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulations</strong> You should added New Mobile Successfully.<br />
                Check <a asp-controller="Mobile" asp-action="GetMobiles" asp-route-id="@ViewBag.MobileId">here</a> to view details
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

    <form method="post" asp-action="AddNewMobile" asp-controller="Mobile">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Language"></label>
            <select asp-for="Language" class="form-control">
                <option value="">Choose Language...</option>
                <option selected>English</option>
                <option>Hindi</option>
                <option>Marathi</option>
                <option>dutch</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MobileName"></label>
            <input asp-for="MobileName" class="form-control" />
            <span asp-validation-for="MobileName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MobileVersion"></label>
            <input asp-for="MobileVersion" class="form-control" />
            <span asp-validation-for="MobileVersion" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div class="form-group">
            <input type="submit" value="Add Product" class="btn btn-primary" />
        </div>
    </form>
    </div>

